{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ build active file",
            "type": "shell",
            "command": "/usr/bin/g++", // Caminho para o compilador (pode ser diferente no Windows)
            "args": [
                "-g", 
                "${file}", 
                "-o", 
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated by VS Code"
        }
    ]
}
